{
  "consul": "consul:8500",
  "services": [
    {
      "name": "frontend",
      "port": 8000,
      "health": "/usr/bin/curl -o /dev/null --fail -s curl http://localhost:8000/act -d '{ \"role\": \"seneca\", \"cmd\": \"stats\" }'",
      "poll": 3,
      "ttl": 10
    }
  ],
  "backends": [
    {
      "name": "serializer",
      "poll": 3,
      "onChange": "/usr/local/bin/reload.sh"
    }
  ]
}
